# Redirect non-www to www and enforce HTTPS
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect non-www to www
RewriteCond %{HTTP_HOST} ^webbuzz\.tech [NC]
RewriteRule ^(.*)$ https://www.webbuzz.tech/$1 [L,R=301]

# Prevent redirect loops
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
RewriteRule ^index\.html$ https://www.webbuzz.tech/ [R=301,L]

# Redirect /webbuzz and /webbuzz.html to the homepage for SEO consolidation
RewriteCond %{REQUEST_URI} ^/webbuzz(\.html)?$
RewriteRule ^webbuzz(\.html)?$ https://webbuzz.tech/ [L,R=301]

# Redirect /about-webbuzz to /about-webbuzz.html
RewriteCond %{REQUEST_URI} ^/about-webbuzz$
RewriteRule ^about-webbuzz$ about-webbuzz.html [L,R=301]

# Handle trailing slashes consistently - remove them
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Set default index file
DirectoryIndex index.html

# Set correct content types
AddType application/json .json
AddType text/xml .xml

# Enable CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/html "access plus 1 week"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresDefault "access plus 1 month"
</IfModule>

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>
